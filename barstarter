#!/bin/sh

FONT="-misc-fixed-medium-r-normal-*-15-*-*-*-*-*-iso10646-1"
COLOUR="#000000"
FONTCOLOUR="#d8d8d8"
LEFTLEMONBAR="1920x20+0+0"
RIGHTLEMONBAR="1920x20+1920+0"
LEFTTERMBAR="212x1+0+0"
RIGHTTERMBAR="212x1+1920+0"

MONITORS=$(xprop -root _NET_DESKTOP_GEOMETRY | awk -F " = " '{ print $2 }')
if [ "$MONITORS" = "3840, 1080" ] ; then
	#xterm -name termbar -class termbar -geometry "$LEFTTERMBAR" -e ~/bin/termbar &
	#xterm -name termbar -class termbar -geometry "$RIGHTTERMBAR" -e ~/bin/termbar &
	~/bin/lemonscript.sh | lemonbar -dp -g "$LEFTLEMONBAR" -B "$COLOUR" -F "$FONTCOLOUR" -f "$FONT" &
	~/bin/lemonscript.sh | lemonbar -dp -g "$RIGHTLEMONBAR" -B "$COLOUR" -F "$FONTCOLOUR" -f "$FONT" &
elif [ "$MONITORS" = "1920, 1080" ] ; then
	#xterm -name termbar -class termbar -geometry "$LEFTTERMBAR" -e ~/bin/termbar &
	~/bin/lemonscript.sh | lemonbar -dp -g "$LEFTLEMONBAR" -B "$COLOUR" -F "$FONTCOLOUR" -f "$FONT" &
fi
